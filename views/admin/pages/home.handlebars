        background: url('public/img/bg_clean2.0.png') fixed;
        background-repeat: no-repeat;
        background-size: cover;
        filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='public/img/bg_clean2.0.png', sizingMethod='scale');
        -ms-filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='public/img/bg_clean2.0', sizingMethod='scale');
